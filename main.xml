<Main title="My App" swatch="grey">
    <link src="block"/>
    <link src="stfulbutton" />
    <State count="num: 0" content="str: some text"/>
    <Column>
        <Block text="$count" bgcolor="color: blue"/>
        <Block text="$content" bgcolor="color: green" />
        <Button>
            <Press>
                setState(() {
                    count++;
                    content += 'a';
                });
            </Press>
            <Text>Click me</Text>
        </Button>
        <Button>
            <Press>
                setState(() {
                    count = 0;
                    content = 'some text';
                });
            </Press>
            <Icon color="red">delete</Icon>
        </Button>
        <StfulDemo/>
    </Column>
</Main>