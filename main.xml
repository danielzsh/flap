<Main title="My App" swatch="grey">
    <link src="stfuldemo" />
    <link src="home"/>
    <State page="widget: Home()" />
    <Navbar>
        <Button>
            <Press>
                <Change>
                    page = Home();
                </Change>
            </Press>
            <Icon>home</Icon>
        </Button>
        <Container>
            <Margin right="16"/>
            <Button>
                <Press>
                    <Change>
                        page = StfulDemo(initial: 0);
                    </Change>
                </Press>
                <Text color="black">Stateful demo</Text>
            </Button>
        </Container>
    </Navbar>
    {page}
</Main>